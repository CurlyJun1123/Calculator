{
  "easycom": {
    "autoscan": true,
    "custom": {
      "^ct-(.*)": "@/ctview-ui/components/ct-$1/ct-$1.vue"
    }
  },
  "globalStyle": {
    "navigationBarTextStyle": "black",
    "navigationBarTitleText": "旅游",
    "navigationBarBackgroundColor": "#FFFFFF",
    "backgroundColor": "#FFFFFF"
  },
  "pages": [
    {
      "path": "pages/home/home",
      "style": {
        "navigationBarTitleText": "顽友"
      }
    },
    {
      "path": "pages/search/search"
    },
    {
      "path": "pages/detail/detail",
      "style": {
        "backgroundColorBottom": "#EFEFEF",
        "backgroundColorTop": "#EFEFEF",
        "navigationBarTitleText": "详情"
      }
    },
    {
      "path": "pages/mine/mine",
      "style": {
        "backgroundColorBottom": "#f8f8f8",
        "backgroundColorTop": "#1e90ff",
        "navigationBarBackgroundColor": "#1e90ff",
        "navigationBarTextStyle": "white",
        "navigationBarTitleText": "我的"
      }
    },
    {
      "path": "pages/order/details",
      "style": {
        "navigationBarTitleText": ""
      }
    },
    {
      "path": "pages/order/order",
      "style": {
        "backgroundColorBottom": "#f8f8f8",
        "backgroundColorTop": "#1e90ff",
        "navigationBarBackgroundColor": "#1e90ff",
        "navigationBarTextStyle": "white",
        "navigationBarTitleText": "订单填写"
      }
    },
    {
      "path": "pages/order/list",
      "style": {
        "navigationBarBackgroundColor": "#f8f8f8",
        "navigationBarTitleText": "订单列表"
      }
    },
    {
      "path": "pages/identity/edit",
      "style": {
        "navigationBarTitleText": "新增出行人信息"
      }
    },
    {
      "path": "pages/identity/list",
      "style": {
        "navigationBarTitleText": "常用出行人"
      }
    }
  ],
  "tabBar": {
    "color": "#333333",
    "selectedColor": "#1e90ff",
    "list": [
      {
        "text": "首页",
        "pagePath": "pages/home/home",
        "selectedIconPath": "/static/tabber/home-selected.png",
        "iconPath": "/static/tabber/home.png"
      },
      {
        "text": "我的",
        "pagePath": "pages/mine/mine",
        "selectedIconPath": "/static/tabber/mine-selected.png",
        "iconPath": "/static/tabber/mine.png"
      }
    ]
  }
}